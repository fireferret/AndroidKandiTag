<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimage_holder"
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/splash_screen_kt_logo_universal"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/screenname_holder"
        android:layout_toRightOf="@+id/profileimage_holder"
        android:text="FIREFERRET"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/hasConnectedIndicator"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_redheart"/>

</RelativeLayout>